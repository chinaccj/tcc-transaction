<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="account">
    <!--parameterType is for Aliases, if for resultMap's id, should use parameterMap instead-->
    <update id="charge" parameterType="map">
        update account set balance=balance-#{price} where user_id=#{userId}
    </update>
</mapper>
