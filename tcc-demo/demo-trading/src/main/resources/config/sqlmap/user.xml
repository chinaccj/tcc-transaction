<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<!--resultMap'type is Aliases, id is reference for select -->
	<resultMap type="user" id="user">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
	</resultMap>

	

	<!--parameterType is for Aliases, if for resultMap's id, should use parameterMap instead-->
	<select id="findById" parameterType="user" resultMap="user">
		SELECT	* FROM user
		<where>
			id=#{applyId}
		</where>
	</select>


	<!--parameterType is for Aliases, if for resultMap's id, should use parameterMap instead-->
	<update id="updateById" parameterType="user">
		update user set name=#{name} where id=#{id}
	</update>


	<select id="deleteById" parameterType="int" resultType="int">
		delete  FROM user
		<where>
			id=#{id};
		</where>
	</select>


</mapper>
